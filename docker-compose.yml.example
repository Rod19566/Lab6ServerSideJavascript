version: "3"

services:
    app:
        build: ./dockerfiles/node
        ports:
            - "3009:3000"
        volumes:
            - .:/app
        depends_on:
            - mysql
    mysql:
        build: ./dockerfiles/mysql
        ports:
            - "33069:3306"
        volumes:
            - "mysql-data:/var/lib/mysql"
        environment:
            MYSQL_ROOT_PASSWORD: root_dog_blog_password
            MYSQL_DATABASE: dog_blog_db
volumes:
    mysql-data:
        driver: "local"
